        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_grey</item>
        <!-- Status bar color. -->
            <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
    </style>

    <!-- Customize your theme here. -->
    <style name="Theme.BasicApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BasicApplication.NoActionBar.Poppins" parent="Theme.BasicApplication.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="Theme.BasicApplication.NoActionBar.PoppinsMedium" parent="Theme.BasicApplication.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="Theme.BasicApplication.NoActionBar.PoppinsLight" parent="Theme.BasicApplication.NoActionBar">
        <item name="android:fontFamily">@font/poppins_light</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_light</item>
    </style>
    <style name="Theme.BasicApplication.NoActionBar.PoppinsBold" parent="Theme.BasicApplication.NoActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="Theme.BasicApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BasicApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NavDrawerItemAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
</resources>